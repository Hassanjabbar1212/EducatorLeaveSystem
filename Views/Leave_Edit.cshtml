@model LeaveType
<form asp-action="Leave_Edit" asp-controller="Leave">
    <input asp-for="LeaveGroupId" class="Form Controller" />
    <div class="form-group">
        <label asp-for="TypeName">TypeName:</label>
        <input asp-for="TypeName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Days">Days</label>
        <input asp-for="Days" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
